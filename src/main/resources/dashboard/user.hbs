<p>
  Your repositories:
</p>

<form action="/api/repos/{{user}}" method="GET">
  <label>Create new repository:</label>
  <input id="new-repo-name" name="repo" type="text" size="25" required="true" pattern="[a-z0-9]{3,16}"/>
  <label>Type:</label>
  <select name="type">
    <option value="maven">Maven</option>
    <option value="file">Binary</option>
    <option value="docker">Docker</option>
    <option value="npm">NPM</option>
    <option value="rpm">RPM</option>
    <option value="maven-proxy">Maven proxy (mirror)</option>
    <option value="file-proxy">Binary proxy (mirror)</option>
    <option value="maven-group">Maven group (virtual)</option>
  </select>
  <input id="new-repo-submit" type="submit" value="Add"/>
</form>

<ul>
{{#repos}}
  <li>
    <a href="/dashboard/{{this}}">{{this}}</a>
  </li>
{{/repos}}
</ul>

